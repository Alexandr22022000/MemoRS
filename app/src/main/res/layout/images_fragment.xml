<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_main"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout0">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image0_layout">

                <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:srcCompat="@mipmap/image_not_found"
                        android:id="@+id/image0"
                        android:onClick="PressImage"/>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/del"
                        android:layout_alignRight="@+id/image0"
                        android:layout_alignEnd="@+id/image0"
                        android:id="@+id/image0_del"
                        android:onClick="PressImage"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image1_layout">

                <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        app:srcCompat="@mipmap/image_not_found"
                        android:id="@+id/image1"
                        android:onClick="PressImage"/>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/del"
                        android:layout_marginLeft="60dp"
                        android:id="@+id/image1_del"
                        android:onClick="PressImage"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>